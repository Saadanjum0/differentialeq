{
  "version": 2,
  "buildCommand": "./vercel-build.sh",
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1",
      "headers": {
        "Cache-Control": "public, max-age=86400"
      }
    },
    {
      "src": "/css/(.*)",
      "dest": "/static/css/$1",
      "headers": {
        "Content-Type": "text/css",
        "Cache-Control": "public, max-age=86400"
      }
    },
    {
      "src": "/js/(.*)",
      "dest": "/static/js/$1",
      "headers": {
        "Content-Type": "application/javascript",
        "Cache-Control": "public, max-age=86400"
      }
    },
    {
      "src": "/favicon.ico",
      "dest": "/static/favicon.ico"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "env": {
    "PYTHONPATH": "/vercel/path0",
    "FLASK_ENV": "production"
  }
} 